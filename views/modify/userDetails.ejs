<!-- views/pages/users.ejs -->
<!-- The users coupons page for coupons will have search/list/add/delete/update UI here -->
<!DOCTYPE html>
<html lang="en">

<!-- User head in partials/index.ejs -->
<head>
  <% include ../partials/head %>
</head>

<body>

  <!-- User header in partials/header.ejs -->
  <header>
    <% include ../partials/header %>
  </header>

  <!-- Main body -->
  <main  class="container userTitle">
    <div class="jumbotron">
      <h1>Users</h1>
      <p>Have found all coupons for this user</p>
    </div>

    <div class="userList">
      <ul class="list-group">
        <li class="list-group-item list-group-item-info">
          <h4> CouponCode </h4>
          <h4> Username </h4>
          <h4> Valid </h4>
          <h4> Coupon Rule </h4>
          <h4> Rebate Rule </h4>

        </li>

        <!-- List All Coupon Code by username-->
        <% userList.forEach(function(coupon) { %>
          <a class="list-group-item">
            <h4><%= coupon.couponID %></h4>
            <h4><%= coupon.username %></h4>
            <h4><%= coupon.valid %></h4>
            <h4><%= coupon.couponRule.type %> <%= coupon.couponRule.value %></h4>
            <h4><%= coupon.rebateRule.type %> <%= coupon.rebateRule.value %></h4>
          </a>
          <% }); %>

        </ul>
      </div>

      <!-- Edit Coupon in partials/couponEdit.ejs -->
      <div>
        <% include ../partials/couponEdit %>
      </div>

    </main>


    <!-- User footer in partials/footer.ejs -->
    <footer>
      <% include ../partials/footer %>
    </footer>

  </body>
  </html>
